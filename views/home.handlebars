<script src="./js/home.js"></script>

<div class="flex h-screen">
    <div id="formContainer" class="w-1/3 bg-gray-200 p-6">
        <h2 class="text-xl font-bold mb-4">Agregar Producto</h2>
        <form id="newProductForm" class="space-y-4">
            <input id="title" type="text" placeholder="Título" class="w-full p-2 border rounded">
            <input id="description" type="text" placeholder="Descripción" class="w-full p-2 border rounded">
            <input id="code" type="text" placeholder="Código" class="w-full p-2 border rounded">
            <input id="price" type="number" placeholder="Precio" class="w-full p-2 border rounded">
            <input id="stock" type="number" placeholder="Stock" class="w-full p-2 border rounded">
            <input id="category" type="text" placeholder="Categoría" class="w-full p-2 border rounded">
            <button type="submit" class="w-full bg-blue-600 text-white p-2 rounded">Agregar</button>
        </form>
    </div>

    <div class="w-2/3 p-6 overflow-y-auto bg-gray-100">
    <h2 class="text-xl font-bold mb-4">Lista de Productos</h2>
    <div class="space-y-4">
        {{#each products}}
        <div class="p-4 border rounded bg-white flex justify-between">
            <div class="flex-1">
                <h3 class="text-lg font-semibold">{{title}}</h3>
                <p class="text-sm text-gray-600">{{description}}</p>
                <p><span class="font-bold">Código:</span> {{code}}</p>
                <p><span class="font-bold">Precio:</span> ${{price}}</p>
                <p><span class="font-bold">Stock:</span> {{stock}}</p>
                <p><span class="font-bold">Categoría:</span> {{category}}</p>
                <p><span class="font-bold">Estado:</span> {{#if status}}disponible{{else}}no disponible{{/if}}</p>

                <button
                    class="mt-4 bg-red-500 text-white px-4 py-2 rounded deleteProductBtn"
                    data-id="{{id}}">
                    Eliminar
                </button>
            </div>
            <div class="ml-4 flex-shrink-0">
                
                {{#each thumbnails}}
                <img src="img/{{this}}" class="w-48 h-48 object-cover rounded-lg">
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</div>

</div>